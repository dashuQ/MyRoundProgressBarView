<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myroundprogressbarview.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center"
        android:text="圆形进度条" />

    <com.example.myroundprogressbarview.view.MyRoundProgressBarView
        android:id="@+id/my_round_progress_bar_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:roundProgressColor="#2184d1"
        app:textColor="#666666"
        app:roundWidth="45dp"
        />

</LinearLayout>
